<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header id='flash-header'>
      <% flash.each do |type, message| %>
        <p><%= message %></p>
      <% end %>
    </header>
    <%= render 'layouts/navbar' %>
    <%= yield %>
  </body>
</html>
